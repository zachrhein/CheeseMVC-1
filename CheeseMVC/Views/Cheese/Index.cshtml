@{
    
}
@model List<CheeseMVC.Models.Cheese>


<h1>My Cheeses</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese</a></p> 

@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

<form method="post" action="/Cheese/Remove">
    <table class="table">
            <tr>
                <th>Remove</th>
                <th>Name</th>
                <th>Description</th>
                <th>Edit</th>
            </tr>
        @foreach (Cheese cheese in Model)
        {
            <tr>
                <td><input type="checkbox" name="cheeseIds" value="@cheese.CheeseId"/></td>
                <td>@cheese.Name</td>
                <td>@cheese.Description</td>
                <td><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.CheeseId">edit</a></td>
            </tr>
        }
    </table>
    <input type="submit" value="Remove Selected" />
</form>
